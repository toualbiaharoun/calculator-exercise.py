num1 = float(input("enter the first number "))
oper = input("enter an operation (+,-,*,/,%) ")
num2 = float(input("enter the second number "))
if oper == "+": 
    result = num1 + num2
    print(num1,"+",num2, "= ",result )
elif oper == "-":
    result = num1 - num2
    print(num1,"-",num2, "= ",result )
elif oper == "/":
    if num2 != 0:
        result = num1 / num2
        print(num1,"/",num2, "= ",result )
    else:
        print("canâ€™t division by zero")
elif oper == "*":
    result = num1* num2
    print(num1,"*",num2, "= ",result )
elif oper == "%":
    result = num1 % num2
    print(num1,"%",num2, "= ",result )
else:
    print("invailed operation ",oper)
